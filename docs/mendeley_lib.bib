   keywords = {Andrew S Alexander,Jennifer C Robinson,MEDLINE,Michael E Hasselmo,NCBI,NIH,NLM,National Center for Biotechnology Information,National Institutes of Health,National Library of Medicine,PMC7708714,PubMed Abstract,Review,doi:10.1177/2398212820972871,pmid:33294626},
   month = {1},
   pages = {239821282097287},
   publisher = {SAGE Publications},
   title = {Neurophysiological coding of space and time in the hippocampus, entorhinal cortex, and retrosplenial cortex},
   volume = {4},
